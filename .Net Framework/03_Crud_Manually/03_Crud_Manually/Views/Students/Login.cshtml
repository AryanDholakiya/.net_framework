@model _03_Crud_Manually.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Students", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @{
        if (TempData["error"] != null)
        {
        

            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Oops!</strong>  @TempData["error"]   @Html.ActionLink("Register", "Register")
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        if (TempData["Registered"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong>  TempData["Registered"]  
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


    }

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.LoginStudentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LoginStudentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LoginStudentName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-2">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div class="mt-2">
    @Html.ActionLink("New User? Register", "Register", FormMethod.Get, new { @class = "textdecoration-underline line" })
</div>
