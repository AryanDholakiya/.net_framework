@model IEnumerable<Partial_View_Example.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table text-center table-bordered">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.SId)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.SName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sstd)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>
                    @item.SId
                </td> *@
                <td>
                    @item.SName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sstd)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.SId">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SId" onclick="return confirm('Are you sure to delete the record?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
