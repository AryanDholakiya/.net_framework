@model AjaxWithJQuery.Models.Employees

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpId" />
            <div class="form-group">
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpEmail" class="control-label"></label>
                <input asp-for="EmpEmail" class="form-control" />
                <span asp-validation-for="EmpEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpSalary" class="control-label"></label>
                <input asp-for="EmpSalary" class="form-control" />
                <span asp-validation-for="EmpSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" id="EditRecord" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
          $('#EditRecord').click(function()
          {
            var empObj =
            {
              EmpId: $('#EmpId').val(),
              EmpName: $('#EmpName').val(),
              EmpEmail: $('#EmpEmail').val(),
              EmpSalary: $('#EmpSalary').val(),
            };
            $.ajax(
            {
              url: "/EmpInfo/Edit",
              data: empObj,
              type: "POST",
              success: function (result) {
                 window.location.href="/EmpInfo/Index"
              },
              error: function (errormessage) {
                  alert(errormessage.responseText);
              }
            });
          });
        });
    </script>
}
