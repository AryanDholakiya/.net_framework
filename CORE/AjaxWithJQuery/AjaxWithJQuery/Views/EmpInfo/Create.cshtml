@model AjaxWithJQuery.Models.Employees

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EmpName" class="control-label"></label>
            <input asp-for="EmpName" class="form-control" />
            <span asp-validation-for="EmpName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmpEmail" class="control-label"></label>
            <input asp-for="EmpEmail" class="form-control" />
            <span asp-validation-for="EmpEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmpSalary" class="control-label"></label>
            <input asp-for="EmpSalary" class="form-control" />
            <span asp-validation-for="EmpSalary" class="text-danger"></span>
        </div>

        <button type="button" id="addBtn" class="btn btn-primary">Create</button>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
 @section Scripts {
@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script>
        $(document).ready(function () {

           $('#addBtn').click(function(){
              var empObj = {
              EmpName: $('#EmpName').val(),
              EmpEmail: $('#EmpEmail').val(),
              EmpSalary: $('#EmpSalary').val(),
          };        
          $.ajax({
              url: "/EmpInfo/Create",
              data: empObj,
              type: "POST",           
              success: function (result) {  
                 window.location.href="/EmpInfo/Index"
              },
              error: function (errormessage) {
                  alert(errormessage.responseText);
              }
          });

          })
        })
    </script>


   @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 
