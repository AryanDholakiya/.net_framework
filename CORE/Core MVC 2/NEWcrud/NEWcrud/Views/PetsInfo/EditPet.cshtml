@model NEWcrud.Models.Pet

@{
    ViewData["Title"] = "EditPet";
}

<h1>Edit Pet</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPet" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="petId" />
            <input type="hidden" asp-for="PetPhoto" />
            <div class="form-group">
                <label asp-for="file" class="control-label">Pet Photo:</label>
                <input asp-for="file" type="file" class="form-control mb-1 border border-secondary" />
                <span asp-validation-for="file" class="text-danger mb-1"></span>
            </div>
            <div class="form-group">
                <label asp-for="petName" class="control-label">Pet Name</label>
                <input asp-for="petName" class="form-control mb-2" />
                <span asp-validation-for="petName" class="text-danger mb-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="petAge" class="control-label">Pet Age</label>
                <input asp-for="petAge" class="form-control mb-2" />
                <span asp-validation-for="petAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="petAdoptedDate" class="control-label">Date of Adoption:</label>
                <input asp-for="petAdoptedDate" id="petAdoptedDate" class="form-control mb-2" />
                <span asp-validation-for="petAdoptedDate" class="text-danger mb-1"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="petGender" class="control-label">Gender:</label> <br />
                <input type="radio" asp-for="petGender" class="gender form-check-input me-1" value="Male" />Male
                <input type="radio" asp-for="petGender" class="gender form-check-input ms-2 me-1" value="Female" />Female
                <span asp-validation-for="petGender" class="text-danger mb-2"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="petBreed" name="breed" class="control-label text-decoration-underline">Breed: </label> <br />

                <select class="form-select" asp-for="petBreed" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option name="breed" value="Cat">Cat</option>
                    <option name="breed" value="Dog">Dog</option>
                    <option name="breed" value="Horse">Horse</option>
                    <option name="breed" value="Cow">Cow</option>
                    <option name="breed" value="other">other</option>
                </select>

                <span asp-validation-for="petBreed" class="text-danger mb-2"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="petCountries" name="country" class="control-label text-decoration-underline">Country: </label> <br />
                <select class="form-select border border-secondary" asp-for="PetCountryId" asp-items="ViewBag.CountryList" aria-label="Default select example">
                    <option selected disabled>Open this select menu</option>
                </select>
                <span asp-validation-for="petCountries" class="text-danger mb-2"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Hobbies" class="control-label text-decoration-underline">Hobbies: </label> <br />
                @* this entire code is for the edit hobby section *@
                @{
                    // The list of all available hobbies
                    var availableHobbies = new[] { "Playing", "Dancing", "Singing", "Travelling", "Exploring" };

                    // Split the model's Hobbies string into an array for easy checking
                    var selectedHobbies = Model.Hobbies?.Split(new[] { ", " }, StringSplitOptions.None) ?? new string[0];
                }

                @foreach (var hobby in availableHobbies)
                {
                    bool isChecked = selectedHobbies.Contains(hobby);
                    <input type="checkbox"
                           name="hobby"
                           class="form-check-input me-1"
                           value="@hobby"
                           @(isChecked ? "checked" : "") />
                    @hobby
                }
            </div>
            <div class="d-flex ">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary me-2" />
                </div>
                <div>
                    <a class="btn btn-warning" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
  
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
