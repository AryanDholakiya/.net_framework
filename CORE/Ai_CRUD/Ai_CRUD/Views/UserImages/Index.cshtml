@model IEnumerable<Ai_CRUD.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-decoration-underline mb-4">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary ">Create New</a>
</p>
<table class="table table-bordered text-center border-secondary table-hover">
    <thead class="table table-dark text-white border border-0 border-white ">
        <tr >
            <th>
                Photo
            </th>
            <th>
                Person Name
            </th>
            <th>
                Age
            </th>
            <th>
                Mobile Number
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center align-middle">
                    @if(item.Photo != null){
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Photo))" width="70" height="70" />
                    }
                    
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td class="text-center align-middle">
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
