@model IEnumerable<file_upload_CoreMVC.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Upload">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Person Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@Url.Action("DisplayImage", new { id = item.PersonId })" width="80px" height="80px"/>
                    @* <img src="data:image/png;base64,@item.PersonImgFile" /> *@

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
